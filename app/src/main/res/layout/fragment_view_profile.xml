<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="softwareengineering.assignment.sharify.ViewProfileFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_darker"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/editDetails"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:layout_gravity="top|right"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/editprofile"
                android:background="@color/transparent"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:src="@drawable/logo_white" />

            <TextView
                android:id="@+id/viewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="24dp"
                android:paddingLeft="24dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:textSize="30dp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/iron"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="2dp"
            android:text="@string/email_hint"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/viewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/blueGray"
            android:textSize="20dp" />

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:layout_gravity="center"
            android:background="@color/grey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="2dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:text="@string/Type_Org"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/viewType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/blueGray"
            android:textSize="20dp" />


        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:layout_gravity="center"
            android:background="@color/grey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="2dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:text="@string/Address_Org"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/viewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/blueGray"
            android:textSize="20dp" />

        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:layout_gravity="center"
            android:background="@color/grey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="2dp"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:text="@string/Contact_Org"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/viewContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/blueGray"
            android:textSize="20dp" />

    </LinearLayout>
</ScrollView>
